@model List<CityWeather>;

<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="utf-8"/>
        <title> City Weather</title>
        <link href="~/StyleSheet2.css" rel="stylesheet"/>
        <style>
            .weather-box{
                display:flex;
                flex-direction: row;
                justify-content:space-around;
            }
            .main{
                display:flex;
                justify-content:space-between;
                 align-content: center;
                align-items: center;
            }
            .right{
            padding-right: 20px;
            border-right: 2px solid #ccc;
            h4{
                color:gray;
                }
            }
            .left{
                align-content:center;
            }
            .blue{
                background-color:aqua;
            }
            .yellow{
                background-color:lemonchiffon;
            }
            .orange{
                background-color:orange;
            }
             
            weather{
                
            }
        </style>
    </head> 
    <body>
    <div class="page-content ">
        <div class="weather">

        <h1 > Weather</h1>
        </div>
        <div class="main  ">
        @foreach(CityWeather city in Model)
        {
                if (city.TemperatureFahrenheit < 44)
                {
                    <div class="weather-box box blue">
                        <div class="right">
                            <h2>@city.CityName</h2>
                            <h4>@city.DateAndTime.TimeOfDay AM</h4>
                            <a href="~/details/@city.CityUniqueCode">Details</a>
                        </div>
                        <div class="left"><h3>@city.TemperatureFahrenheit F </h3></div>
                    </div>
                }else if(city.TemperatureFahrenheit>=44 && city.TemperatureFahrenheit <=74)
                {
                    <div class="weather-box box yellow">
                        <div class="right">
                            <h2>@city.CityName</h2>
                            <h4>@city.DateAndTime.TimeOfDay AM</h4>
                            <a href="~/details/@city.CityUniqueCode">Details</a>
                        </div>
                        <div class="left"><h3>@city.TemperatureFahrenheit F </h3></div>
                    </div>
                }else if(city.TemperatureFahrenheit> 74)
                {
                    <div class="weather-box box orange">
                        <div class="right">
                            <h2>@city.CityName</h2>
                            <h4>@city.DateAndTime.TimeOfDay AM</h4>
                            <a href="~/details/@city.CityUniqueCode">Details</a>
                        </div>
                        <div class="left"><h3>@city.TemperatureFahrenheit F </h3></div>
                    </div>
                }

                
        }
            </div>
        </div>
    </body>
</html>